<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.ankit.dailycontrol.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="90dp"
        android:background="#F7F7F7"
        android:id="@+id/relativeHeader">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/identityLinear">


            <TextView
                android:layout_width="100dp"
                android:background="#185d96"
                android:text="Kid"
                android:id="@+id/kid"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="30sp"
                android:layout_height="100dp" />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/identityLinear"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_height="130dp">

                <RelativeLayout
                    android:layout_width="600dp"
                    android:layout_height="match_parent"

                    >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/salad"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Salad"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mealOp1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="45dp"
                        android:layout_below="@id/salad"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/firstPlate"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/salad"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="First Plate"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mealOp2"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="65dp"
                        android:layout_toRightOf="@id/mealOp1"
                        android:layout_below="@id/firstPlate"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/secondPlate"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/firstPlate"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Second Plate"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mealOp3"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="65dp"
                        android:layout_toRightOf="@id/mealOp2"
                        android:layout_below="@id/secondPlate"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/desert"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/secondPlate"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Desert"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mealOp4"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/mealOp3"
                        android:layout_below="@id/desert"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/snak"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/desert"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Snak"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mealOp5"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/mealOp4"
                        android:layout_below="@id/desert"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/normal"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Normal"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/normalToilet"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/normal"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/diarrhea"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/normal"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Diarrhea"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/diarrheaToilet"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="45dp"
                        android:layout_toRightOf="@id/normalToilet"
                        android:layout_below="@id/diarrhea"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/hard"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/diarrhea"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Hard"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hardToilet"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/diarrheaToilet"
                        android:layout_below="@id/hard"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/time"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Time"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/napTime"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/time"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/diaper"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Diapers"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0277BD"
                        android:id="@+id/diaper_need"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/diaper"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#185d96"
                        android:gravity="center"
                        android:id="@+id/wet_wipes"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/diaper"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:text="Wet wipes"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wetWipes"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/diaper_need"
                        android:layout_marginLeft="85dp"
                        android:background="#0277BD"
                        android:layout_below="@id/wet_wipes"
                        />
                </RelativeLayout>


            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/relativeHeader"
        android:id="@+id/separator"
        android:background="#000000"
        android:orientation="horizontal"></LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/separator"
        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:animationCache="false"
        android:id="@+id/newListView"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />
</RelativeLayout>
